<ul class="badges">

  <li>
    <a href="#">
      <span><img src="/images/badge-1.gif" width="15" height="16" alt=""></span>
      <strong><%= advertisement.advertisement_type.name %></strong>
    </a>
  </li>

  <% if advertisement.company.company_type.name != 'Empresa' %>
  <li>
    <a href="#">
      <span><img src="/images/badge-2.gif" width="15" height="15" alt=""></span>
      <strong><%= advertisement.company.company_type.name %></strong>
    </a>
  </li>
  <% end %>

  <li>
    <a href="#">
      <span><img src="/images/badge-3.gif" width="16" height="13" alt=""></span>
      <strong>
      <% if advertisement.start_date && Date.today + 1.months < advertisement.start_date %>
        <%= (l advertisement.start_date, format: '%B, %Y').humanize %>
      <% else %>
        Inmediata
      <% end %>
      </strong>
    </a>
  </li>

  <%
  # <li>
  #   <a href="#">
  #     <span><img src="/images/badge-4.gif" width="14" height="18" alt=""></span>
  #     <strong>Ong</strong>
  #   </a>
  # </li>
  %>

  <% if advertisement.is_paid %>
  <li>
    <a href="#">
      <span><img src="/images/badge-5.gif" width="19" height="13" alt=""></span>
      <strong>Remunerada</strong>
    </a>
  </li>
  <% else %>
  <li>
    <a href="#">
      <span><img src="/images/badge-5.gif" width="19" height="13" alt=""></span>
      <strong>No remunerada</strong>
    </a>
  </li>
  <% end %>

  <li>
    <a href="#">
      <span><img src="/images/badge-6.gif" width="16" height="18" alt=""></span>
      <strong><%= advertisement.working_turn.name %></strong>
    </a>
  </li>

  <% if advertisement.vacancies > 0 %>
  <li>
    <a href="#">
      <span><img src="/images/badge-7.gif" width="16" height="16" alt=""></span>
      <strong><%= advertisement.vacancies %> vacantes</strong>
    </a>
  </li>
  <% end %>
      
</ul>