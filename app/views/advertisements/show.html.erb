    <% unless @advertisement.requirements.blank? %>
    <h2>Requisitos</h2>
    <p><%= @advertisement.requirements %></p>
    <% end %>

    <%= link_to "¡Postularme!", (apply_advertisement_path @advertisement), {class: 'toapply toapply2'} %>
