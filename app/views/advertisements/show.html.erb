<div class="banner">
  <div class="bnrtop">
    <% unless @advertisement.company.company_logo.blank? %>
    <img src="<%= @advertisement.company.company_logo_url %>" />
    <% end %>
    <h1><%= @advertisement.title %> <strong>en <a href="<%= @advertisement.company.website %>" target="_blank"><%= @advertisement.company.name %></a></strong></h1>
    <%= link_to "¡Postularme!", (apply_advertisement_path @advertisement), {class: 'toapply'}%>
  </div>
  <div class="map">
    <img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= @advertisement.company.location %>&zoom=15&size=700x230&sensor=true&markers=<%= @advertisement.company.location %>" width="943" height="300" alt="">
  </div>
</div>

