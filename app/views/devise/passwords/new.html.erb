<%= content_for :top_body do %>
  <div class="container">
    <div class="col-md-3"></div>
    <div class="col-md-6 auth-form">
      <h2>Olvidaste tu contraseña?</h2>
      <p>Te enviaremos instrucciones para recuperar tu contraseña</p>
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

        <div class="form-group <%= !resource.errors[:email].empty? ? 'has-error' : '' %>">
          <%= f.label :email, class: 'control-label' %>
          <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
          <% unless resource.errors[:email].empty? %>
            <div class="help-block text-right"><%= resource.errors[:email].first %></div>
          <% end %>
        </div>

        <div class="text-right">
          <%= f.submit "Recuperar contraseña", class: 'btn btn-primary btn-lg' %>
        </div>

      <% end %>

    </div>
    </div>
  </div>
<% end %>
