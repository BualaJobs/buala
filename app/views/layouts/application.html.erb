<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag "application", rel: 'favicon', type: 'image/ico', href: '/favicon.ico' %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta property="og:site_name" content="Bual치! Jobs" />
  <meta property="og:type" content="website" />
  <%= display_meta_tags %>
</head>
<body ng-app="Buala">
  <%= analytics_init if Rails.env.production? %>
  
  <!-- NAVBAR -->
  <div class="navbar navbar-default navbar-buala" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <%= link_to root_path do %>
          <img src="/images/logo.png" alt="Bual치! Jobs" class="logo" />
        <% end %>
      </div>
      <ul class="nav navbar-nav navbar-right auth-btns">
        <% if user_signed_in? %>
          <li>
            <p class="navbar-text">Hola, <%= current_user.fullname %>!</p>
          </li>
          <li class="dropdown">
            <%= link_to '#', class: 'dropdown-toggle', :'data-toggle' => 'dropdown' do %>
              <%= fa_icon :cog %>
            <% end %>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <%= fa_icon :signout %>
                  Logout
                <% end %> 
              </li>
            </ul>
          </li>
        <% else %>
          <li class="auth-link-wrapper">
            <%= link_to new_user_registration_path do %>
              <%= fa_icon :user %>
              Registrate
            <% end %>
          </li>
          <li class="auth-link-wrapper">
            <%= link_to new_user_session_path do %>
              <%= fa_icon :rocket %>
              Iniciar Sesi칩n
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- CONTENT -->
  <div class="full-container body-container" ng-controller="<%= yield(:ng_controller) %>">
    <div class="top-body">
      <%= yield(:top_body) %>
    </div>
    <%= yield %>
  </div>

  <!-- FOOTER -->
  <div class="full-container footer-container">
    <div class="container">
      <%= yield(:pre_footer) %>
      <div class="social">
        <a href="http://facebook.com/bualajobs" target="_blank"><%= fa_icon 'facebook-sign' %></a>
        <a href="https://twitter.com/bualajobs" target="_blank"><%= fa_icon 'twitter-sign' %></a>
        <a href="http://www.linkedin.com/company/bual-jobs" target="_blank"><%= fa_icon 'linkedin-sign' %></a>
      </div>
    </div>
    <div class="copyright-container">
      Bual치! Jobs Copyright &copy; 2013
    </div>
  </div>
  <%= yield :scripts %>
</body>
</html>
